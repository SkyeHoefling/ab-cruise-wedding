<div class="rsvp">
    <div class="row">
        <h1>R&#233;spondez s'il vous pla&#238;t</h1>
        <h2>RSVP</h2>
        <form>
            <fieldset class="row">
                <div class="columns small-12 large-6 medium-6">
                    <input id="checkbox1" type="checkbox"><label for="checkbox1">Ready to Book</label></input>
                </div>
                <div class="columns small-12 large-6 medium-6">
                    <input id="checkbox2" type="checkbox"><label for="checkbox2">Need More Info</label></input>
                </div>
            </fieldset>
            <div class="row small-up-1 medium-up-2 large-up-4">
                <div class="column column-block">
                    <label>Full Name
                        <input type="text" placeholder="John Smith" />
                    </label>
                </div>
                <div class="column column-block">
                    <label>Email
                        <input type="text" placeholder="me@anywhere.com" />
                    </label>
                </div>
                <div class="column column-block">
                    <label>Phone
                        <input type="text" placeholder="(123) 456-7890" />
                    </label>
                </div>
                <div class="column column-block">
                    <label>Number of Guests
                        <input type="number" value="1" />
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="columns small-12 large-8 medium-8">
                    <label>Other Comments
                        <textarea placeholder="Any questions?"></textarea>
                    </label>
                </div>
                <div class="columns small-12 large-4 medium-4">
                    <a class="button">Send RSVP</a>
                </div>
            </div>
        </form>
    </div>
</div>